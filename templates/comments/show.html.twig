<!DOCTYPE html>

<title>Comments</title>

{% block body %}
    <h1>Comments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>ArtComment</th>
                <td>{{ comment.artComment }}</td>
            </tr>
            <tr>
