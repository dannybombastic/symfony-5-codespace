<!DOCTYPE html>

<title>Categories index</title>

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.image }}</td>
                <td>{{ category.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('articulos_categories_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('articulos_categories_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('articulos_categories_new') }}">Create new</a>
{% endblock %}
