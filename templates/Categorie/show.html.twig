<!DOCTYPE html>

<title>Categories</title>

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ category.image }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ category.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('articulos_categories_index') }}">back to list</a>

    <a href="{{ path('articulos_categories_edit', {'id': category.id}) }}">edit</a>

    {{ include('articulos_categories/_delete_form.html.twig') }}
{% endblock %}
